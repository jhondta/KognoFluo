<div class="flex flex-col items-center justify-start px-6 pt-8 mx-auto md:h-screen pt:mt-0 dark:bg-gray-900">
  <div class="w-full max-w-xl p-6 space-y-2 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
      <%= t('.sign_in') %>
    </h1>
    
    <%= form_for(resource, as: resource_name, html: { class: 'mt-8 space-y-6' },
                 url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: t('.email_placeholder'),
                          class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                                  focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                  dark:border-gray-600 dark:placeholder-gray-400 dark:text-white
                                  dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
        <%= f.password_field :password, autocomplete: 'current-password', placeholder: '••••••••',
                             class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                                     focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                     dark:border-gray-600 dark:placeholder-gray-400 dark:text-white
                                     dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
      </div>

      <div class="flex items-start">
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center h-5">
            <%= f.check_box :remember_me, class: 'w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3
                                                  focus:ring-blue-300 dark:focus:ring-blue-600
                                                  dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600' %>
          </div>
          <div class="ml-3 text-sm">
            <%= f.label :remember_me, class: 'font-medium text-gray-900 dark:text-white' %>
          </div>
        <% end %>

        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to t('.forgot_your_password'), 
                      new_password_path(resource_name),
                      class: 'ml-auto text-sm text-blue-700 hover:underline dark:text-blue-500' %>
        <% end %>
      </div>

      <%= f.submit t('.sign_in'), 
                   class: 'w-full px-5 py-3 text-base font-medium text-center text-white bg-blue-700
                                     rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 sm:w-auto
                                     dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

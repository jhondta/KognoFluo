<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Production lines" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Production lines</h1>
    <%= link_to "New production line", new_organization_production_line_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="organization_production_lines" class="min-w-full">
    <% @organization_production_lines.each do |organization_production_line| %>
      <%= render organization_production_line %>
      <p>
        <%= link_to "Show this production line", organization_production_line, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>

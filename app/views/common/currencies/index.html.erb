<div class="w-full">
  <% content_for :title, t('activerecord.models.common/currency.other') %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('activerecord.models.common/currency.other') %></h1>
    <%= link_to t('.new'), new_common_currency_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="common_currencies" class="min-w-full">
    <% @common_currencies.each do |common_currency| %>
      <%= render common_currency %>
      <p>
        <%= link_to t('.show'), common_currency, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>

<!-- Resource Item Partial -->
<div class="flex items-center justify-between p-2 bg-gray-50 rounded-lg dark:bg-gray-700 mb-2">
  <div class="flex items-center">
    <span class="text-sm font-medium text-gray-900 dark:text-white">
      <%= resource_form.object.name %>
    </span>
    <% if resource_form.object.hours_required.present? %>
      <span class="ml-2 text-xs text-gray-500 dark:text-gray-400">
        <%= t('.hours', count: resource_form.object.hours_required) %>
      </span>
    <% end %>
  </div>
  <button type="button"
          class="text-red-700 hover:text-white border border-red-700 hover:bg-red-800 font-medium rounded-lg
                 text-sm px-3 py-1 text-center dark:border-red-500 dark:text-red-500 dark:hover:text-white
                 dark:hover:bg-red-600"
          data-controller="resource-removal"
          data-action="click->resource-removal#remove">
    <%= t('remove') %>
  </button>
</div>
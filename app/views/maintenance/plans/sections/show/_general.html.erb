<div class="grid gap-6">
  <!-- Informaci贸n General -->
  <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
      <%= t('.general_information') %>
    </h3>

    <dl>
      <!-- Primer par: Tipo de plan y Estado -->
      <div class="grid md:grid-cols-2 gap-4 mb-4">
        <div>
          <dt class="text-gray-500 text-sm dark:text-gray-400">
            <%= t('activerecord.attributes.maintenance/plan.plan_type') %>
          </dt>
          <dd class="text-gray-900 dark:text-white">
            <%= maintenance_plan.t_enum(:plan_type) %>
          </dd>
        </div>

        <div>
          <dt class="text-gray-500 text-sm dark:text-gray-400">
            <%= t('activerecord.attributes.maintenance/plan.status') %>
          </dt>
          <dd class="text-gray-900 dark:text-white">
            <%= maintenance_plan.t_enum(:status) %>
          </dd>
        </div>
      </div>

      <!-- Segundo par: C贸digo y Nombre -->
      <div class="grid md:grid-cols-2 gap-4 mb-4">
        <div>
          <dt class="text-gray-500 text-sm dark:text-gray-400">
            <%= t('activerecord.attributes.maintenance/plan.code') %>
          </dt>
          <dd class="text-gray-900 dark:text-white">
            <%= maintenance_plan.code %>
          </dd>
        </div>

        <div>
          <dt class="text-gray-500 text-sm dark:text-gray-400">
            <%= t('activerecord.attributes.maintenance/plan.name') %>
          </dt>
          <dd class="text-gray-900 dark:text-white">
            <%= maintenance_plan.name %>
          </dd>
        </div>
      </div>

      <!-- Tercer par: Criticidad y Duraci贸n estimada -->
      <div class="grid md:grid-cols-2 gap-4 mb-4">
        <div>
          <dt class="text-gray-500 text-sm dark:text-gray-400">
            <%= t('activerecord.attributes.maintenance/plan.criticality') %>
          </dt>
          <dd class="text-gray-900 dark:text-white">
            <%= maintenance_plan.t_enum(:criticality) %>
          </dd>
        </div>

        <div>
          <dt class="text-gray-500 text-sm dark:text-gray-400">
            <%= t('activerecord.attributes.maintenance/plan.estimated_duration') %>
          </dt>
          <dd class="text-gray-900 dark:text-white">
            <%= format_duration(maintenance_plan.estimated_duration) %>
          </dd>
        </div>
      </div>

      <!-- Descripci贸n (ancho completo) -->
      <div class="mb-4">
        <dt class="text-gray-500 text-sm dark:text-gray-400">
          <%= t('activerecord.attributes.maintenance/plan.description') %>
        </dt>
        <dd class="text-gray-900 dark:text-white">
          <%= maintenance_plan.description.presence || '-' %>
        </dd>
      </div>

      <!-- Requiere paro (ancho completo) -->
      <div>
        <dt class="text-gray-500 text-sm dark:text-gray-400">
          <%= t('activerecord.attributes.maintenance/plan.requires_shutdown') %>
        </dt>
        <dd class="text-gray-900 dark:text-white">
          <%= t("boolean.#{maintenance_plan.requires_shutdown}") %>
        </dd>
      </div>
    </dl>
  </div>
</div>
<!-- Tabs -->
<%= render 'maintenance/plans/sections/tabs' %>

<!-- Tab Content -->
<div id="tab-content" class="h-full">
  <%= form_with(model: maintenance_plan, id: 'plan_form') do |form| %>
    <%= render partial: 'shared/error_messages', locals: { resource: maintenance_plan } %>
    <!-- General -->
    <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="general" role="tabpanel"
         aria-labelledby="general-tab">
      <%= render partial: '/maintenance/plans/form/general',
                 locals: { form: form, maintenance_plan: maintenance_plan } %>
    </div>

    <!-- Resources -->
    <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="resources" role="tabpanel"
         aria-labelledby="resources-tab">
      <%= render partial: '/maintenance/plans/form/resources',
                 locals: { form: form, maintenance_plan: maintenance_plan } %>
    </div>

    <!-- Tasks -->
    <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="tasks" role="tabpanel"
         aria-labelledby="tasks-tab">
      <%= render partial: '/maintenance/plans/form/tasks',
                 locals: { form: form, maintenance_plan: maintenance_plan } %>
    </div>

    <!-- Schedule -->
    <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="schedule" role="tabpanel"
         aria-labelledby="schedule-tab">
      <%= render partial: '/maintenance/plans/form/schedule',
                 locals: { form: form, maintenance_plan: maintenance_plan } %>
    </div>
  <% end %>
</div>

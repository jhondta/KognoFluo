<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Plans" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Plans</h1>
    <%= link_to "New plan", new_maintenance_plan_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="maintenance_plans" class="min-w-full">
    <% @maintenance_plans.each do |maintenance_plan| %>
      <%= render maintenance_plan %>
      <p>
        <%= link_to "Show this plan", maintenance_plan, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>

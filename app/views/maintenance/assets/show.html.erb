<div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800
            dark:border-gray-700">
  <div class="w-full mb-1">
    <div class="mb-4">
      <%= render partial: 'shared/breadcrumb',
                 locals: { pages: { 'Mantenimiento': '#',
                                    'Activos': maintenance_assets_path,
                                    "#{@maintenance_asset.full_code}": '#' } } %>
      <div class="flex items-center space-x-2">
        <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">
          <%= "#{@maintenance_asset.full_code}:  #{@maintenance_asset.name}" %>
        </h1>
        <% color = @maintenance_asset.status_color %>
        <span class="bg-<%= color %>-100 text-<%= color %>-800 text-sm font-medium me-2 px-3 py-1 rounded-full
                   dark:bg-<%= color %>-900 dark:text-<%= color %>-300">
          <%= @maintenance_asset.translate_enum(:status) %>
        </span>
      </div>
    </div>

    <div class="border-b border-gray-200 dark:border-gray-700">
      <ul id="asset-tabs" data-tabs-toggle="#tab-content" role="tablist"
          class="flex flex-wrap -mb-px text-sm font-medium text-center text-gray-500 dark:text-gray-400">
        <li class="me-2">
          <a href="#" id="general-tab" data-tabs-target="#general" role="tab" aria-controls="general"
             aria-selected="true"
             class="inline-flex items-center justify-center p-4 border-b-2 border-blue-600 rounded-t-lg
                    hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group">
            <svg class="w-4 h-4 me-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500
                        dark:group-hover:text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                 width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10 11h2v5m-2 0h4m-2.592-8.5h.01M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
            </svg>
            General
          </a>
        </li>
        <li class="me-2">
          <a href="#" id="components-tab" data-tabs-target="#components" role="tab" aria-controls="components"
             aria-selected="false"
             class="inline-flex items-center justify-center p-4 border-b-2 border-blue-600 rounded-t-lg
                    hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group">
            <svg class="w-4 h-4 me-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500
                        dark:group-hover:text-gray-300" aria-hidden="true"
                 xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M21 13v-2a1 1 0 0 0-1-1h-.757l-.707-1.707.535-.536a1 1 0 0 0 0-1.414l-1.414-1.414a1 1 0 0
                           0-1.414 0l-.536.535L14 4.757V4a1 1 0 0 0-1-1h-2a1 1 0 0 0-1 1v.757l-1.707.707-.536-.535a1 1 0
                           0 0-1.414 0L4.929 6.343a1 1 0 0 0 0 1.414l.536.536L4.757 10H4a1 1 0 0 0-1 1v2a1 1 0 0 0 1
                           1h.757l.707 1.707-.535.536a1 1 0 0 0 0 1.414l1.414 1.414a1 1 0 0 0 1.414
                           0l.536-.535 1.707.707V20a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-.757l1.707-.708.536.536a1 1 0 0 0
                           1.414 0l1.414-1.414a1 1 0 0 0 0-1.414l-.535-.536.707-1.707H20a1 1 0 0 0 1-1Z"/>
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
            </svg>
            Componentes
          </a>
        </li>
        <li class="me-2">
          <a href="#" id="documents-tab" data-tabs-target="#documents" role="tab" aria-controls="documents"
             aria-selected="false"
             class="inline-flex items-center justify-center p-4 border-b-2 border-blue-600 rounded-t-lg
                    hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group">
            <svg class="w-4 h-4 me-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500
                        dark:group-hover:text-gray-300" aria-hidden="true"
                 xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10 3v4a1 1 0 0 1-1 1H5m4 8h6m-6-4h6m4-8v16a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V7.914a1 1 0 0 1
                         .293-.707l3.914-3.914A1 1 0 0 1 9.914 3H18a1 1 0 0 1 1 1Z"/>
            </svg>
            Documentos
          </a>
        </li>
        <li class="me-2">
          <a href="#" id="assignees-tab" data-tabs-target="#assignees" role="tab" aria-controls="assignees"
             aria-selected="false"
             class="inline-flex items-center justify-center p-4 border-b-2 border-blue-600 rounded-t-lg
                    hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group">
            <svg class="w-4 h-4 me-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500
                        dark:group-hover:text-gray-300" aria-hidden="true"
                 xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-width="2"
                    d="M16 19h4a1 1 0 0 0 1-1v-1a3 3 0 0 0-3-3h-2m-2.236-4a3 3 0 1 0 0-4M3 18v-1a3 3 0 0 1 3-3h4a3 3
                           0 0 1 3 3v1a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1Zm8-10a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
            </svg>
            Responsables
          </a>
        </li>
        <li class="me-2">
          <a href="#" id="history-tab" data-tabs-target="#history" role="tab" aria-controls="history"
             aria-selected="false"
             class="inline-flex items-center justify-center p-4 border-b-2 border-blue-600 rounded-t-lg
                    hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group">
            <svg class="w-4 h-4 me-2 text-gray-400 group-hover:text-gray-500 dark:text-gray-500
                        dark:group-hover:text-gray-300" aria-hidden="true"
                 xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 4h3a1 1 0 0 1 1 1v15a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h3m0 3h6m-6 5h6m-6 4h6M10
                         3v4h4V3h-4Z"/>
            </svg>
            Historial
          </a>
        </li>
      </ul>
    </div>

    <div id="tab-content" class="h-full">
      <!-- General Information -->
      <div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="general" role="tabpanel"
           aria-labelledby="general-tab">
        <div class="grid md:grid-cols-3 gap-4">
          <!-- Información General -->
          <div class="space-y-2">
            <h2 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white">
              Información General
            </h2>
            <ul class="space-y-2 text-gray-500 dark:text-gray-400">
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Código</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.full_code %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Nombre</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.name %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Tipo</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.type.name %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Fabricante</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.manufacturer.name %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Modelo</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.model %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Serie</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.serial_number %></span>
              </li>
            </ul>
          </div>

          <!-- Especificación técnica -->
          <div class="space-y-2">
            <h2 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white">
              Especificación técnica
            </h2>
            <ul class="space-y-2 text-gray-500 dark:text-gray-400">
              <% @maintenance_asset.technical_specs.each_pair do |key, value| %>
                <li>
                  <h3 class="text-gray-600 font-medium dark:text-gray-400"><%= key.titleize %></h3>
                  <span class="text-gray-800 dark:text-gray-300"><%= value %></span>
                </li>
              <% end %>
            </ul>
          </div>

          <!-- Condiciones de operación -->
          <div class="space-y-2">
            <h2 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white">
              Condiciones de operación
            </h2>
            <ul class="space-y-2 text-gray-500 dark:text-gray-400">
              <% @maintenance_asset.operation_conditions.each_pair do |key, value| %>
                <li>
                  <h3 class="text-gray-600 font-medium dark:text-gray-400"><%= key.titleize %></h3>
                  <span class="text-gray-800 dark:text-gray-300"><%= value %></span>
                </li>
              <% end %>
            </ul>
          </div>

          <!-- Ubicación -->
          <div class="space-y-2">
            <h2 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white">
              Ubicación
            </h2>
            <ul class="space-y-2 text-gray-500 dark:text-gray-400">
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Planta</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.production_line.area.plant.name %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Área</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.production_line.area.name %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Línea</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.production_line.name %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Ubicación</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= @maintenance_asset.physical_location %></span>
              </li>
            </ul>
          </div>

          <!-- Fechas -->
          <div class="space-y-2">
            <h2 class="mb-4 text-lg font-semibold text-gray-800 dark:text-white">
              Fechas
            </h2>
            <ul class="space-y-2 text-gray-500 dark:text-gray-400">
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Fecha
                  de fabricación</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= l(@maintenance_asset.manufacturing_date) %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Fecha
                  de adquisición</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= l @maintenance_asset.purchase_date %></span>
              </li>
              <li>
                <h3 class="text-gray-600 font-medium dark:text-gray-400">Expiración
                  de garantía</h3>
                <span class="text-gray-800 dark:text-gray-300"><%= l @maintenance_asset.warranty_expiration %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Components -->
      <div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="components" role="tabpanel"
           aria-labelledby="components-tab">
        <% if @maintenance_asset.components.any? %>
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @maintenance_asset.components.each do |component| %>
              <li class="pb-3 sm:pb-4">
                <div class="flex items-center space-x-4">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
                      <%= component.name %>
                    </p>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      <%= component.description %>
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="flex items-center justify-center w-full">
            <div class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed
                      rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600">
              <div class="flex flex-col items-center justify-center pt-5 pb-6">
                <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                     xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M21 13v-2a1 1 0 0 0-1-1h-.757l-.707-1.707.535-.536a1 1 0 0 0 0-1.414l-1.414-1.414a1 1 0 0
                           0-1.414 0l-.536.535L14 4.757V4a1 1 0 0 0-1-1h-2a1 1 0 0 0-1 1v.757l-1.707.707-.536-.535a1 1 0
                           0 0-1.414 0L4.929 6.343a1 1 0 0 0 0 1.414l.536.536L4.757 10H4a1 1 0 0 0-1 1v2a1 1 0 0 0 1
                           1h.757l.707 1.707-.535.536a1 1 0 0 0 0 1.414l1.414 1.414a1 1 0 0 0 1.414
                           0l.536-.535 1.707.707V20a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-.757l1.707-.708.536.536a1 1 0 0 0
                           1.414 0l1.414-1.414a1 1 0 0 0 0-1.414l-.535-.536.707-1.707H20a1 1 0 0 0 1-1Z"/>
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
                </svg>
                <p class="mb-2 text-lg font-semibold text-gray-500 dark:text-gray-400">
                  No hay componentes asociados
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  Agrega componentes relacionados con este activo
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Documents -->
      <div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="documents" role="tabpanel"
           aria-labelledby="documents-tab">
        <% if @maintenance_asset.documents.any? %>
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @maintenance_asset.documents.each do |document| %>
              <li>

              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="flex items-center justify-center w-full">
            <div class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed
                      rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600">
              <div class="flex flex-col items-center justify-center pt-5 pb-6">
                <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                     xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M10 3v4a1 1 0 0 1-1 1H5m4 8h6m-6-4h6m4-8v16a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V7.914a1 1 0 0 1
                         .293-.707l3.914-3.914A1 1 0 0 1 9.914 3H18a1 1 0 0 1 1 1Z"/>
                </svg>
                <p class="mb-2 text-lg font-semibold text-gray-500 dark:text-gray-400">
                  No hay documentos adjuntos
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  Adjunta documentos relacionados con este activo
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Assignees -->
      <div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="assignees" role="tabpanel"
           aria-labelledby="assignees-tab">
        <% if @maintenance_asset.assignees.any? %>
          <ul class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @maintenance_asset.assignees.each do |assignee| %>
              <li class="pb-3 sm:pb-4">
                <div class="flex items-center space-x-4 rtl:space-x-reverse">
                  <div class="flex-shrink-0">
                    <svg class="w-8 h-8 rounded-full text-gray-400 bg-gray-100 dark:bg-gray-600 -left-1"
                         fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                            clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
                      <%= assignee.full_name %>
                    </p>
                    <p class="text-sm text-gray-500 truncate dark:text-gray-400">
                      <%= assignee.email %>
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="flex items-center justify-center w-full">
            <div class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed
                      rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600">
              <div class="flex flex-col items-center justify-center pt-5 pb-6">
                <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                     xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-width="2"
                        d="M16 19h4a1 1 0 0 0 1-1v-1a3 3 0 0 0-3-3h-2m-2.236-4a3 3 0 1 0 0-4M3 18v-1a3 3 0 0 1 3-3h4a3 3
                           0 0 1 3 3v1a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1Zm8-10a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                </svg>

                <p class="mb-2 text-lg font-semibold text-gray-500 dark:text-gray-400">
                  No hay responsables asignados
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  Asigna responsables para gestionar este activo
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- History -->
      <div class="hidden p-4 bg-white rounded-lg md:p-8 dark:bg-gray-800" id="history" role="tabpanel"
           aria-labelledby="history-tab">
        <div class="flex items-center justify-center w-full">
          <div class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed
                      rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600">
            <div class="flex flex-col items-center justify-center pt-5 pb-6">
              <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                   xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 4h3a1 1 0 0 1 1 1v15a1 1 0 0 1-1 1H6a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h3m0 3h6m-6 5h6m-6 4h6M10
                         3v4h4V3h-4Z"/>
              </svg>
              <p class="mb-2 text-lg font-semibold text-gray-500 dark:text-gray-400">
                No hay registros de historial
              </p>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                Registra cambios y eventos relacionados con este activo
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

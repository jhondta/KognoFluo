<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
  <!-- Información General -->
  <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M5 12h14M5 12l4-4m-4 4 4 4"/>
      </svg>
      Información General
    </h3>
    <dl class="max-w-md divide-y divide-gray-200 dark:divide-gray-700">
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400"><%= t('activerecord.attributes.maintenance/asset.code') %></dt>
        <dd class="text-gray-900 font-medium dark:text-white"><%= maintenance_asset.full_code %></dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Nombre</dt>
        <dd class="text-gray-900 font-medium dark:text-white"><%= maintenance_asset.name %></dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Tipo</dt>
        <dd class="text-gray-900 font-medium dark:text-white"><%= maintenance_asset.type.name %></dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Fabricante</dt>
        <dd class="text-gray-900 font-medium dark:text-white"><%= maintenance_asset.manufacturer.name %></dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Modelo</dt>
        <dd class="text-gray-900 font-medium dark:text-white"><%= maintenance_asset.model %></dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Serie</dt>
        <dd class="text-gray-900 font-medium dark:text-white"><%= maintenance_asset.serial_number %></dd>
      </div>
    </dl>
  </div>

  <!-- Ubicación -->
  <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 13a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z M12 21s6.375-6.37 6.375-12.37c0-3.316-2.858-6-6.375-6C8.483 2.63
                 5.625 5.314 5.625 8.63 5.625 14.63 12 21 12 21Z"/>
      </svg>
      Ubicación
    </h3>
    <dl class="max-w-md divide-y divide-gray-200 dark:divide-gray-700">
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Planta</dt>
        <dd class="text-gray-900 font-medium dark:text-white">
          <%= maintenance_asset.production_line.area.plant.name %>
        </dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Área</dt>
        <dd class="text-gray-900 font-medium dark:text-white">
          <%= maintenance_asset.production_line.area.name %>
        </dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Línea</dt>
        <dd class="text-gray-900 font-medium dark:text-white">
          <%= maintenance_asset.production_line.name %>
        </dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Ubicación</dt>
        <dd class="text-gray-900 font-medium dark:text-white">
          <%= maintenance_asset.physical_location %>
        </dd>
      </div>
    </dl>
  </div>

  <!-- Fechas -->
  <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
      <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M4 10h16M8 14h8m-4-7V4M7 7V4m10 3V4M5 20h14a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Z"/>
      </svg>
      Fechas
    </h3>
    <dl class="max-w-md divide-y divide-gray-200 dark:divide-gray-700">
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Fecha
          de fabricación
        </dt>
        <dd class="text-gray-900 font-medium dark:text-white"><%= l(maintenance_asset.manufacturing_date) %></dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Fecha
          de adquisición
        </dt>
        <dd class="text-gray-900 font-medium dark:text-white"><%= l maintenance_asset.purchase_date %></dd>
      </div>
      <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400">Expiración
          de garantía
        </dt>
        <dd class="text-gray-900 font-medium dark:text-white"><%= l maintenance_asset.warranty_expiration %></dd>
      </div>
    </dl>
  </div>

  <!-- Especificación técnica -->
  <% if maintenance_asset.technical_specs.present? %>
    <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
      <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2
                   2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
        </svg>
        Especificación técnica
      </h3>
      <dl class="max-w-md divide-y divide-gray-200 dark:divide-gray-700">
        <% maintenance_asset.technical_specs.each_pair do |key, value| %>
          <div class="flex flex-col py-3">
            <dt class="mb-1 text-gray-500 text-sm dark:text-gray-400"><%= key.titleize %></dt>
            <dd class="text-gray-900 font-medium dark:text-white"><%= value %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  <% end %>
</div>
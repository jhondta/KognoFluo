<!-- Tabs -->
<%= render 'maintenance/assets/sections/form/tabs' %>

<!-- Tab Content -->
<div id="tab-content" class="h-full">
  <%= form_with(model: maintenance_asset, id: 'asset_form', data: { turbo: false }) do |form| %>
    <%= render partial: 'shared/error_messages', locals: { resource: maintenance_asset } %>
    <!-- General Information -->
    <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="general" role="tabpanel"
         aria-labelledby="general-tab">
      <%= render partial: 'maintenance/assets/sections/form/general',
                 locals: { form: form, maintenance_asset: maintenance_asset } %>
    </div>

    <!-- Components -->
    <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="components" role="tabpanel"
         aria-labelledby="components-tab">
      <%= render partial: 'maintenance/assets/sections/form/components',
                 locals: { form: form, maintenance_asset: maintenance_asset } %>
    </div>

    <!-- Documents -->
    <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="documents" role="tabpanel"
         aria-labelledby="documents-tab">
      <%= render partial: 'maintenance/assets/sections/form/documents',
                 locals: { form: form, maintenance_asset: maintenance_asset } %>
    </div>

    <!-- Assignees -->
    <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="assignees" role="tabpanel"
         aria-labelledby="assignees-tab">
      <%= render partial: 'maintenance/assets/sections/form/assignees',
                 locals: { form: form, maintenance_asset: maintenance_asset } %>
    </div>
  <% end %>
</div>
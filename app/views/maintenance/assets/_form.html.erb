<!-- Tabs -->
<%= render 'maintenance/assets/sections/tabs' %>

<!-- Tab Content -->
<div id="tab-content" class="h-full">
  <!-- General Information -->
  <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="general" role="tabpanel"
       aria-labelledby="general-tab">
    <%= form_with(model: maintenance_asset, id: 'asset_form', class: 'contents') do |form| %>
      <%= render partial: 'shared/error_messages', locals: { resource: maintenance_asset } %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- General Information -->
        <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M5 12h14M5 12l4-4m-4 4 4 4"/>
            </svg>
            <%= t('.general_information') %>
          </h3>

          <div class="space-y-4">
            <div>
              <%= form.label :code, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.text_field :code,
                                  class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                          focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                          dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" %>
            </div>

            <div>
              <%= form.label :name, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.text_field :name,
                                  class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                          focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                          dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" %>
            </div>

            <div>
              <%= form.label :maintenance_asset_type_id,
                             class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.collection_select :maintenance_asset_type_id, @maintenance_asset_types, :id, :name, {},
                                         class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                                 focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5
                                                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
            </div>

            <div>
              <%= form.label :maintenance_manufacturer_id,
                             class: "block mb-2 text-sm font-medium text-gray-90 dark:text-white" %>
              <%= form.collection_select :maintenance_manufacturer_id, @maintenance_manufacturers, :id, :name, {},
                                         class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                                 focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5
                                                 dark:bg-gray-700 dark:border-gray-600 dark:text-white" %>
            </div>

            <div>
              <%= form.label :model,
                             class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.text_field :model,
                                  class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                          focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                          dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" %>
            </div>

            <div>
              <%= form.label :serial_number,
                             class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.text_field :serial_number,
                                  class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                          focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                          dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" %>
            </div>

            <div>
              <%= form.label :status,
                             class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.select :status, enum_options_for_select(maintenance_asset.class, :status), {},
                              class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                          focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                          dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" %>
            </div>
          </div>
        </div>

        <!-- Ubicación -->
        <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 13a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z M12 21s6.375-6.37 6.375-12.37c0-3.316-2.858-6-6.375-6C8.483
                       2.63 5.625 5.314 5.625 8.63 5.625 14.63 12 21 12 21Z"/>
            </svg>
            <%= t('.location') %>
          </h3>

          <div class="space-y-4" data-controller="asset-location"
               data-asset-location-plant-id="<%= @plant.id if @plant %>"
               data-asset-location-area-id="<%= @area.id if @area %>">
            <div>
              <%= form.label :organization_plant_id,
                             class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
              <%= form.collection_select :organization_plant_id, @organization_plants, :id, :name,
                                         { prompt: t('.select_plant'),
                                           selected: @plant&.id },
                                         { class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                                   focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5
                                                   dark:bg-gray-700 dark:border-gray-600 dark:text-white',
                                           data: { asset_location_target: 'plant',
                                                   action: 'change->asset-location#updateAreas' }, } %>
            </div>

            <div>
              <%= form.label :organization_area_id,
                             class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
              <%= turbo_frame_tag 'areas_select' do %>
                <%= form.collection_select :organization_area_id, @organization_areas || [], :id, :name,
                                           { prompt: t('.select_area'),
                                             selected: @area&.id },
                                           { class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                                     focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5
                                                     dark:bg-gray-700 dark:border-gray-600 dark:text-white',
                                             data: { asset_location_target: 'area',
                                                     action: 'change->asset-location#updateProductionLines' } } %>
              <% end %>
            </div>

            <div>
              <%= form.label :organization_production_line_id,
                             class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white' %>
              <%= turbo_frame_tag 'production_lines_select' do %>
                <%= form.collection_select :organization_production_line_id, @organization_production_lines || [], :id, :name,
                                           { prompt: t('.select_production_line') },
                                           { class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                                     focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5
                                                     dark:bg-gray-700 dark:border-gray-600 dark:text-white',
                                             data: { asset_location_target: 'productionLine' } } %>
              <% end %>
            </div>

            <div>
              <%= form.label :physical_location,
                             class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.text_field :physical_location,
                                  class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                          focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                          dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" %>
            </div>
          </div>
        </div>

        <!-- Fechas -->
        <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-width="2"
                    d="M4 10h16M8 14h8m-4-7V4M7 7V4m10 3V4M5 20h14a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1v12a1 1
                       0 0 0 1 1Z"/>
            </svg>
            <%= t('.dates') %>
          </h3>

          <div class="space-y-4">
            <div>
              <%= form.label :manufacturing_date,
                             class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.date_field :manufacturing_date,
                                  class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                          focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                          dark:border-gray-600 dark:text-white" %>
            </div>

            <div>
              <%= form.label :purchase_date,
                             class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.date_field :purchase_date,
                                  class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                          focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                          dark:border-gray-600 dark:text-white" %>
            </div>

            <div>
              <%= form.label :warranty_expiration,
                             class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.date_field :warranty_expiration,
                                  class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                                          focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700
                                          dark:border-gray-600 dark:text-white" %>
            </div>
          </div>
        </div>

        <!-- Technical Specification -->
        <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0
                       00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
            </svg>
            <%= t('.technical_specification') %>
          </h3>

          <div class="space-y-4"
               data-controller="technical-specs"
               data-specs="<%= @maintenance_asset.technical_specs&.to_json %>">

            <div data-technical-specs-target="container">
            </div>

            <template data-technical-specs-target="template">
              <div class="spec-item flex gap-4 mb-2">
                <input type="text"
                       name="maintenance_asset[technical_specs[][key]]"
                       placeholder="Característica"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500
                              focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600
                              dark:placeholder-gray-400 dark:text-white">

                <input type="text"
                       name="maintenance_asset[technical_specs[][value]]"
                       placeholder="Valor"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500
                              focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600
                              dark:placeholder-gray-400 dark:text-white">

                <button type="button"
                        data-action="technical-specs#remove"
                        class="text-red-600 hover:text-red-800 dark:text-red-500 dark:hover:text-red-700">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1
                             0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                </button>
              </div>
            </template>

            <button type="button"
                    data-action="technical-specs#add"
                    class="text-blue-600 text-sm hover:text-blue-800 dark:text-blue-500 dark:hover:text-blue-700 flex
                           items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
              </svg>
              <%= t('.add_specification') %>
            </button>
          </div>
        </div>

        <!-- Notas -->
        <div class="p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700
                    md:col-span-2">
          <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <%= t('.notes') %>
          </h3>

          <div class="space-y-4">
            <%= form.rich_text_area :notes,
                                    class: "block w-full rounded-lg border 
            [&>trix-toolbar]:rounded-t-lg [&>trix-editor]:rounded-none [&>trix-editor]:rounded-b-lg
            [&>trix-toolbar]:border-0 [&>trix-toolbar]:border-b [&>trix-editor]:border-0
            
            [&>trix-toolbar]:bg-gray-50 [&>trix-editor]:bg-gray-50 
            [&>trix-toolbar]:border-gray-300 [&>trix-editor]:border-gray-300
            [&>trix-toolbar_.trix-button]:bg-gray-50
            [&>trix-editor]:text-gray-900
            
            focus:[&>trix-editor]:ring-blue-500 focus:[&>trix-editor]:border-blue-500
            
            dark:[&>trix-toolbar]:bg-gray-700 dark:[&>trix-editor]:bg-gray-700
            dark:[&>trix-toolbar]:border-gray-600 dark:[&>trix-editor]:border-gray-600
            dark:[&>trix-toolbar_.trix-button]:bg-gray-700
            dark:[&>trix-toolbar_.trix-button-group]:border-gray-600
            dark:[&>trix-toolbar_.trix-button]:border-gray-600
            dark:[&>trix-toolbar_.trix-button]:text-gray-400
            dark:[&>trix-toolbar_.trix-button--icon]:filter
            dark:[&>trix-toolbar_.trix-button--icon]:invert
            dark:[&>trix-toolbar_.trix-button]:hover:bg-gray-600
            dark:[&>trix-toolbar_.trix-button.trix-active]:bg-gray-600
            dark:[&>trix-editor]:text-white
            
            dark:focus:[&>trix-editor]:ring-blue-500 
            dark:focus:[&>trix-editor]:border-blue-500" %>
          </div>
        </div>
    <% end %>
    </div>
  </div>

  <!-- Components -->
  <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="components" role="tabpanel"
       aria-labelledby="components-tab">
  </div>

  <!-- Documents -->
  <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="documents" role="tabpanel"
       aria-labelledby="documents-tab">

  </div>

  <!-- Assignees -->
  <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="assignees" role="tabpanel"
       aria-labelledby="assignees-tab">

  </div>

  <!-- History -->
  <div class="hidden py-4 pt-6 bg-white rounded-lg dark:bg-gray-800" id="history" role="tabpanel"
       aria-labelledby="history-tab">

  </div>
</div>
